<mujoco>
  <option gravity ="0 0 -9.8" timestep="0.001"/>

  <asset>
      <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".4 .4 .4" width="265" height="256"/>
      <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
      <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
  </asset>

  <extension>
    <plugin plugin="mujoco.elasticity.cable"/>
  </extension>

<worldbody>
  <geom type="plane" size="2 2 0.1" rgba=".95 .95 .95 1" material="grid" pos="0 0 0"/>
  <light pos="0 0 1"/>

  <body pos="0 0 0.2">
    <joint type="free"/>
    <geom type="box" size=".1 .2 .01" rgba=".2 .8 .1 1"/>
  </body>

  <composite prefix="actuated" type="cable" curve="cos(s) sin(s) s" count="41 1 1"
            size="0.25 .1 4" offset="0.25 0 .05" initial="none">
    <plugin plugin="mujoco.elasticity.cable">
        <!--Units are in Pa (SI)-->
        <config key="twist" value="5e8"/>
        <config key="bend" value="15e8"/>
        <config key="vmax" value="0"/>
    </plugin>
    <joint kind="main" damping="0.15" armature="0.01"/>
    <geom type="capsule" size=".005" rgba=".8 .2 .1 1"/>
  </composite>

</worldbody>
</mujoco>