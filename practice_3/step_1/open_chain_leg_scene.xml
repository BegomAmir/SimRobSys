<mujoco model="open_chain_leg_scene">
    <compiler eulerseq="zyx" angle="degree" meshdir="./assets/" texturedir="./assets/" autolimits="true"/>

    <option timestep="0.005" gravity="0.0 0.0 -9.8"/>
    <!-- Timestep is set to 0.0005 because the standard controller runs at 2 kHz -->
    <!-- Larger values still have stable dynamics -->
    
    <include file="open_chain_leg.xml"/>

    <statistic center="0 0 0.55" extent="1.1"/>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="150" elevation="-20"/>
        <scale framewidth="0.02" jointwidth="0.02" actuatorlength="1.0"
                actuatorwidth="0.02" constraint="0.05" contactwidth="0.05"/>
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
        markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>
        <light pos="0 0 3" dir="0 0 -1" directional="false"/>
        <light pos="2.0 0 3" dir="0 0 -1" directional="false"/>
        <light pos="0 2.0 3" dir="0 0 -1" directional="false"/>
        <light pos="-2.0 0 3" dir="0 0 -1" directional="false"/>
        <light pos="0 -2.0 3" dir="0 0 -1" directional="false"/>
        <geom name="floor" size="0 0 .125" type="plane" material="groundplane" conaffinity="15" condim="3"/>
    </worldbody>

</mujoco>