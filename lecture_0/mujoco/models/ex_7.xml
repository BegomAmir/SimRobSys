<mujoco>
  <option gravity ="0 0 -9.8" timestep="0.001"/>

  <asset>
      <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".4 .4 .4" width="265" height="256"/>
      <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
      <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
      <texture name="cage" type="2d" file="cage.png"/>
      <material name="john_cage" texture="cage"/>
  </asset>

  <extension>
    <plugin plugin="mujoco.elasticity.cable"/>
  </extension>

<worldbody>
  <geom type="plane" size="2 2 0.1" rgba=".95 .95 .95 1" material="grid" pos="0 0 0"/>
  <light pos="0 0 1"/>

  <body pos=".1 .1 .5">
    <joint type="free"/>
    <geom type="box" size=".15 .15 .05" rgba=".2 .8 .1 1" mass="10"/>
  </body>

  <body pos="0 0 .2">
    <freejoint/>
    <composite type="box" count="7 7 7" spacing="0.04">
      <skin texcoord="true" material="john_cage" rgba=".7 .7 .7 1"/>
      <geom type="capsule" size=".015 0.05" rgba=".8 .2 .1 1"/>
    </composite>
  </body>

</worldbody>
</mujoco>